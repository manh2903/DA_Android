<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/qr_code_background"
    tools:context=".Activity.QrCodeActivity"
    android:padding="10dp">

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:background="@drawable/qr_code_background_1"
        android:text="X"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/layout_qr"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/qr_code_background_1">

        <ImageView
            android:id="@+id/img_qr"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/qrcode_default"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire Alarm"
                android:textColor="@color/black"
                android:textSize="15sp"
                 />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_qr_code_scanner_24"
            android:text="Quét"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/qr_code_background_1"
            android:layout_marginEnd="40dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_save_alt_24"
            android:text="Lưu"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/qr_code_background_1" />

    </LinearLayout>


</LinearLayout>