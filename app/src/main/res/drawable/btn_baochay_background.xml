<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hiệu ứng đổ bóng -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/orange"/> <!-- Màu đen với độ mờ -->
            <corners android:radius="50dp"/> <!-- Bán kính của góc bo tròn -->
        </shape>
    </item>
    <!-- Khung tin nhắn -->
    <item android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange2"/> <!-- Màu nền của khung tin nhắn -->
            <corners android:radius="50dp"/> <!-- Bán kính của góc bo tròn -->
        </shape>
    </item>
</layer-list>
